{
    "globals": {
        "document": true,
        "window": true,
        "fetch": true,
        "store": true
    },
    "plugins": [
        "react",
        "react-native",
        "react-redux"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "react-native/react-native": true
    },
    "parser": "babel-eslint",
    "rules": {
        "semi" : ["error", "never"],
        "arrow-parens": [2, "as-needed"],
        "comma-dangle": ["error", "only-multiline"],
        "curly": ["error"],
        "function-paren-newline": ["off"],
        "global-require": "off",
        "indent": ["off", 4],
        "max-len": ["error", { "code": 150 }],
        "no-nested-ternary": ["off"],
        "no-underscore-dangle": ["off"],
        "object-curly-spacing": ["error", "always"],
        "prefer-destructuring": ["off"],
        "react/jsx-indent": [2, 4],
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "react/forbid-prop-types": ["error", { "forbid": ["any"]}],
        "react/prefer-stateless-function": "off",
        "react/no-multi-comp": 2,
        "jsx-a11y/anchor-is-valid": [ "error", {
            "components": [ "Link" ],
            "specialLink": [ "hrefLeft", "hrefRight" ],
            "aspects": [ "invalidHref", "preferButton" ]
        }],
        "max-lines-per-function": ["error", 30],
        "react-native/no-unused-styles": 2,
        "react-native/split-platform-components": 2,
        "react-native/no-inline-styles": 2,
        "react-native/no-color-literals": 2,
        "react-native/no-raw-text": 2,
        react-redux/connect-prefer-minimum-two-arguments: 2,
        react-redux/mapDispatchToProps-returns-object: 2,
        react-redux/mapDispatchToProps-prefer-parameters-names: 2,
        react-redux/mapStateToProps-no-store: 2,
        react-redux/mapStateToProps-prefer-hoisted: 2,
        react-redux/mapStateToProps-prefer-parameters-names: 2,
        react-redux/no-unused-prop-types: 2,
        react-redux/prefer-separate-component-file: 2
    },
    "extends": ["airbnb"]
}